general {
	colors = true
	interval = 1
}

order += "cpu_usage"
order += "load"
order += "disk /"
order += "ethernet _first_"
order += "tztime local"

ethernet _first_ {
	format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

cpu_usage {
	format = "CPU %usage "
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}

load {
	format = "%1min %5min %15min"
}

disk "/" {
	format = "Used / %percentage_used"
}
